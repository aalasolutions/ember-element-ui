<h2>Buttons</h2>

<h3>Standard Buttons</h3>
<ElCard @class="box-card" @shadow="hover" as |card|>
  <card.header @title="The basic standard buttons styles">
  </card.header>
  <card.body>
<ElCard @class="box-card" @shadow="naver" as |card|>
<card.body>
<ElRow @gutter="20" as |row|>
  <row.col>
    <ElButton>Default</ElButton>
    <ElButton @color="primary">Primary</ElButton>
    <ElButton @color="success">Success</ElButton>
    <ElButton @color="info">Info</ElButton>
    <ElButton @color="warning">Warning</ElButton>
    <ElButton @color="danger">Danger</ElButton>
  </row.col>
</ElRow>
</card.body>
</ElCard>
<pre><code class="language-handlebars">\{{#el-row gutter="20" as |row|}}
  \{{#row.col}}
    \{{#el-button}}Default\{{/el-button}}
    \{{#el-button color="primary"}}Primary\{{/el-button}}
    \{{#el-button color="success"}}Success\{{/el-button}}
    \{{#el-button color="info"}}Info\{{/el-button}}
    \{{#el-button color="warning"}}Warning\{{/el-button}}
    \{{#el-button color="danger"}}Danger\{{/el-button}}
  \{{/row.col}}
\{{/el-row}}</code></pre>
  </card.body>
</ElCard>

